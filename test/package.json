  "posthtml": {
    "sync": true,
    "bem": {
      "elemPrefix": "__",
      "modPrefix": "--",
      "modDlmtr": "-"
    },
    "styleToFile": {
      "path": "./dist/styleToFile.css"
    },
    "modules": {
      "root": "./src/"
    },
    "inlineAssets": {
      "from": "dev/index.html"
    },
    "removeTags": {
      "tags": "style"
    },
    "removeAttributes": "class"
  },
  "postcss": {
    "from": "test",
    "to": "./",
    "modules": {
      "generateScopedName": "[name]__[local]___[hash:base64:5]"
    },
    "autoprefixer": {
      "browsers": ["last 2 versions"]
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4"
          }
        }
      ],
      "babili"
    ],
    "plugins": [
      "array-includes",
      "add-module-exports"
    ]
  },
  "stylelint": {
      "extends": "stylelint-config-standard"
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "require-path-exists",
      "markdown"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  },
  "testen": {
    "node": [
      "7",
      "6",
      "5",
      "4"
    ]
  }
}
